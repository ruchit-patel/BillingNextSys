@page
@model SelectBranchModel
@{
    ViewData["Title"] = "Branch Select";
}
<h2>Branch Select</h2>

<hr />
<div class="row">

</div>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label class="control-label">Select a Branch to work with.</label>
                <select class="form-control" name="Bid" asp-items="ViewBag.BranchList" size="4" required></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>