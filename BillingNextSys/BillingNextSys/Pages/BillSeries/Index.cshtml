@page
@model BillingNextSys.Pages.BillSeries.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BillSeries[0].SeriesName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BillSeries) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SeriesName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SeriesName">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SeriesName">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SeriesName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
