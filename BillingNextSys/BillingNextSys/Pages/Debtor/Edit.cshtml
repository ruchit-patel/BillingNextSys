@page
@model BillingNextSys.Pages.Debtor.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Debtor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Debtor.DebtorID" />
            <div class="form-group">
                <label asp-for="Debtor.DebtorName" class="control-label"></label>
                <input asp-for="Debtor.DebtorName" class="form-control" />
                <span asp-validation-for="Debtor.DebtorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Debtor.DebtorOutstanding" class="control-label"></label>
                <input asp-for="Debtor.DebtorOutstanding" class="form-control" />
                <span asp-validation-for="Debtor.DebtorOutstanding" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Debtor.DebtorGroupID" class="control-label"></label>
                <select asp-for="Debtor.DebtorGroupID" class="form-control" asp-items="ViewBag.DebtorGroupID"></select>
                <span asp-validation-for="Debtor.DebtorGroupID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
