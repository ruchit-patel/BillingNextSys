@page
@model BillingNextSys.Pages.Debtor.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Debtor[0].DebtorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Debtor[0].DebtorOutstanding)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Debtor[0].DebtorGroup)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Debtor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DebtorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DebtorOutstanding)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DebtorGroup.DebtorGroupAddress)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DebtorID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DebtorID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DebtorID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
