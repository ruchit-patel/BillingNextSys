@page
@model BillingNextSys.Pages.AdvancePay.CreateModel

@{
    ViewData["Title"] = "Create";
}
<script src="~/Scripts/AjaxTransport/AdvancePayCreate.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<h2>Create</h2>

<h4>AdvancePay</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" id="advancePayForm" onsubmit="addDebtorGroupID()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">

                <label asp-for="AdvancePay.DebtorGroupID" class="control-label"></label>
                @Html.LookupFor(model => model.AdvancePay.DebtorGroupID, new DebtorGroupLookup())
               
            </div>
            <div class="form-group">
                <label asp-for="AdvancePay.AdvanceAmount" class="control-label"></label>
                <input asp-for="AdvancePay.AdvanceAmount" class="form-control" />
                <span asp-validation-for="AdvancePay.AdvanceAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="AdvancePay.ChequePaymet" onclick='chkenable()' id="chqpaychk" checked/> @Html.DisplayNameFor(model => model.AdvancePay.ChequePaymet)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AdvancePay.ChequeNumber" class="control-label"></label>
                <input asp-for="AdvancePay.ChequeNumber" id="chqnum" class="form-control" />
                <span asp-validation-for="AdvancePay.ChequeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdvancePay.ReceivedDate" class="control-label"></label>
                <input asp-for="AdvancePay.ReceivedDate" class="form-control" id="dateReceived" type="date" />
                <span asp-validation-for="AdvancePay.ReceivedDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Advance" class="btn btn-default" onclick="addDebtorGroupID()" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
