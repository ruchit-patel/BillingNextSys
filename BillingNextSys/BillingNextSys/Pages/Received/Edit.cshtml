@model BillingNextSys.PagesReceived.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Received</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Received.ReceivedID" />
            <div class="form-group">
                <label asp-for="Received.ReceivedAmount" class="control-label"></label>
                <input asp-for="Received.ReceivedAmount" class="form-control" />
                <span asp-validation-for="Received.ReceivedAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Received.ReceivedDate" class="control-label"></label>
                <input asp-for="Received.ReceivedDate" class="form-control" />
                <span asp-validation-for="Received.ReceivedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Received.ChequePaymet" /> @Html.DisplayNameFor(model => model.Received.ChequePaymet)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Received.ChequeNumber" class="control-label"></label>
                <input asp-for="Received.ChequeNumber" class="form-control" />
                <span asp-validation-for="Received.ChequeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Received.CompanyID" class="control-label"></label>
                <select asp-for="Received.CompanyID" class="form-control" asp-items="ViewBag.CompanyID"></select>
                <span asp-validation-for="Received.CompanyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Received.BillDetailsID" class="control-label"></label>
                <select asp-for="Received.BillDetailsID" class="form-control" asp-items="ViewBag.BillDetailsID"></select>
                <span asp-validation-for="Received.BillDetailsID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

